<!doctype html>
<html lang="en-US">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Liar's Poker</title>
</head>
<body>
  <h1>Lobby</h1>
  <div class="container" id="main-view">
    <div id="main-connecting" class="d-flex justify-content-">
      <h2>Connecting...</h2>
      <div class="spinner-border ml-auto"></div>
    </div>
    <div id="main-pre-game" class="d-flex justify-content-">
      <h2>Pre-Game Lobby</h2>
    </div>
    <div id="main-game" class="d-flex justify-content-">
      <h2>Game</h2>
    </div>
    <div id="main-post-game" class="d-flex justify-content-">
      <h2>Post-Game Lobby</h2>
    </div>
  </div>
  <script>
    window.addEventListener("DOMContentLoaded", () => {
      const socket = new WebSocket(`wss://${location.host}`);

      // Connection opened
      socket.addEventListener("open", (event) => {
        document.getElementById("main-view").innerHTML = "Done connecting";
      });

      socket.addEventListener("error", (event) => {
        console.error(`Websocket error: ${JSON.stringify(event, ["message", "arguments", "type", "name"])}`);
      });

      // Listen for messages
      socket.addEventListener("message", (event) => {
        console.log("Message from server ", event.data);
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
